<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginRight="26dp"
    android:layout_marginLeft="26dp"
    android:layout_marginTop="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/shadow_lobby_efect"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_rooms_type"
                android:text="음성채팅방"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_marginTop="2dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/user"
            android:layout_marginRight="5dp"
            />
        <LinearLayout
            android:id="@+id/item_rooms_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:gravity="right">
            <TextView
                android:id="@+id/item_rooms_people_num"
                android:text="1"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"/>
            <TextView
                android:text="/"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"/>
            <TextView
                android:id="@+id/item_rooms_people_numlimit"
                android:text="8"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_rooms_title"
            android:gravity="center"
            android:text="방제목입니다."
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/item_rooms_lock"
            android:layout_width="28dp"
            android:layout_height="27dp"
            android:src="@drawable/lock"
            android:visibility="gone"/>
    </LinearLayout>





</LinearLayout>