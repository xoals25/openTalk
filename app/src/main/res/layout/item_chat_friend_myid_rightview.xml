<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingRight="8dp"
    android:paddingLeft="5dp"
    android:gravity="right">

    <TextView
        android:id="@+id/item_chat_friend_myid_id"
        android:text="아이디입니다."
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/item_chat_friend_my_readstate"
                android:text="1"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colordarkPuple"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/item_chat_friend_my_senddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="오후 3:52"
                android:textSize="13dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/item_chat_friend_myid_msg"
            android:text="채팅 내용입니다."
            android:textSize="18dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingLeft="8dp"
            android:paddingRight="5dp"
            android:background="@drawable/viewline_rectangle_my"
            android:maxWidth="226dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_chat_friend_myid_img"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        android:scaleType="fitXY"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:visibility="gone"/>

</LinearLayout>