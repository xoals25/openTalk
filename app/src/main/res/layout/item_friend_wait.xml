<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shadow_lobby"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    >

    <LinearLayout
        android:id="@+id/img_linear"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_purple"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_friend_wait_img"
            android:background="@drawable/profile4"
            android:layout_width="57dp"
            android:layout_height="57dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>


    <TextView
        android:id="@+id/item_friend_wait_email"
        android:text="아이디입니다."
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_linear"
        />

    <Button
        android:id="@+id/item_friend_wait_accept_btn"
        android:text="수락"
        android:textSize="19dp"
        android:textColor="#FFFF"
        android:layout_width="65dp"
        android:padding="10dp"
        android:layout_marginBottom="3dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shadow_login_signin_btn_efect"
        app:layout_constraintRight_toLeftOf="@id/item_friend_wait_refuse_btn"
        />
    <Button
        android:id="@+id/item_friend_wait_refuse_btn"
        android:text="거절"
        android:textSize="19dp"
        android:textColor="#FFFF"
        android:layout_width="65dp"
        android:padding="10dp"
        android:layout_marginBottom="3dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shadow_login_signin_btn_efect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>