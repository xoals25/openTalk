<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <TextView
                android:id="@+id/signup_text"
                android:text="회 원 가 입 ( 2 / 2 )"
                android:textSize="28dp"
                android:textColor="@color/colordarkPuple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:text="정보입력"
                android:textSize="19dp"
                android:textColor="#cec4f7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup_text"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="16">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal">

                        <EditText
                            android:id="@+id/signup_Id_input"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:paddingLeft="15dp"
                            android:hint="아이디"
                            android:textSize="20dp"
                            android:maxLength="20"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/shadow_signup_finish_editext_efect"/>

                        <ImageView
                            android:id="@+id/Idck_mark"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="13dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check_purple"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="@id/signup_Id_input"
                            app:layout_constraintBottom_toBottomOf="@id/signup_Id_input"
                            app:layout_constraintRight_toRightOf="parent"/>
                    
                    <TextView
                        android:id="@+id/signup_Idck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_Id_input"
                        android:visibility="gone"/>
        
                        <EditText
                            android:id="@+id/signup_nickname_input"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:paddingLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:hint="닉네임"
                            android:textSize="20dp"
                            android:maxLength="10"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/signup_Idck_text"
                            android:background="@drawable/shadow_signup_finish_editext_efect"
                            />
                        <ImageView
                            android:id="@+id/Nicknameck_mark"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="13dp"
                            android:background="@drawable/check_purple"
                            android:layout_gravity="center_vertical"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/signup_nickname_input"
                            app:layout_constraintBottom_toBottomOf="@id/signup_nickname_input"
                            android:visibility="gone"/>

                    <TextView
                        android:id="@+id/signup_nicknameck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_nickname_input"
                        android:visibility="gone"/>
                    
                        <EditText
                            android:id="@+id/signup_pwd_input"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:paddingLeft="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shadow_signup_finish_editext_efect"
                            android:hint="비밀번호"
                            android:inputType="textPassword"
                            android:maxLength="32"
                            android:textSize="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/signup_nicknameck_text"
                            />
                        <ImageView
                            android:id="@+id/pwd_mark"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="13dp"
                            android:background="@drawable/check_purple"
                            android:layout_gravity="center_vertical"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/signup_pwd_input"
                            app:layout_constraintBottom_toBottomOf="@id/signup_pwd_input"
                            android:visibility="gone"/>
                    <TextView
                        android:id="@+id/signup_pwd_text"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_pwd_input"
                        android:visibility="gone"/>
        
                        <EditText
                            android:id="@+id/signup_pwdck_input"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:paddingLeft="15dp"
                            android:hint="비밀번호 재입력"
                            android:textSize="20dp"
                            android:maxLength="32"
                            android:inputType="textPassword"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shadow_signup_finish_editext_efect"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/signup_pwd_text"
                            />
                        <ImageView
                            android:id="@+id/pwdck_mark"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="13dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check_purple"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/signup_pwdck_input"
                            app:layout_constraintBottom_toBottomOf="@id/signup_pwdck_input"
                            android:visibility="gone"/>
                    <TextView
                        android:id="@+id/signup_pwdck_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_pwdck_input"
                        android:visibility="gone"/>

                        <EditText
                            android:id="@+id/signup_phone"
                            android:layout_width="350dp"
                            android:layout_height="60dp"
                            android:paddingLeft="15dp"
                            android:hint="핸드폰 번호"
                            android:inputType="number"
                            android:maxLength="11"
                            android:textSize="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shadow_signup_finish_editext_efect"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/signup_pwdck_text"
                             />
                        <ImageView
                            android:id="@+id/phoneck_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="13dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/check_purple"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@id/signup_phone"
                            app:layout_constraintBottom_toBottomOf="@id/signup_phone"
                            android:visibility="gone"/>

                    <Button
                        android:id="@+id/phone_btn"
                        android:text="인 증"
                        android:textColor="#FFFF"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:background="@drawable/shadow_login_signin_btn_efect"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/signup_phone"
                        app:layout_constraintBottom_toBottomOf="@id/signup_phone"/>

                    <EditText
                        android:id="@+id/signup_authnum"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="4dp"
                        android:paddingLeft="15dp"
                        android:hint="인증번호"
                        android:textSize="20dp"
                        android:visibility="gone"
                        android:background="@drawable/shadow_signup_finish_editext_efect"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_phone" />
                    <Button
                        android:id="@+id/authnum_btn"
                        android:text="확 인"
                        android:textColor="#FFFF"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:background="@drawable/shadow_login_signin_btn_efect"
                        app:layout_constraintRight_toRightOf="@id/signup_authnum"
                        app:layout_constraintTop_toTopOf="@id/signup_authnum"
                        app:layout_constraintBottom_toBottomOf="@id/signup_authnum"/>
                    <Button
                        android:id="@+id/signup_signup_btn"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="회 원 가 입"
                        android:textColor="#FFFF"
                        android:layout_marginTop="60dp"
                        android:padding="10dp"
                        android:background="@drawable/shadow_login_signin_btn_efect"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup_authnum"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>